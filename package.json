{
  "name": "@cc/express",
  "version": "1.0.0",
  "description": "expressjs-boilerplate",
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --watch",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/server.js",
    "start:prod": "node dist/server.js",
    "prebuild": "yarn cleanup",
    "cleanup": "rimraf dist",
    "clean:all": "yarn cleanup; rimraf node_modules; rimraf *lock*",
    "build": "cross-env NODE_ENV=production npx babel src --out-dir dist; cp -r src/views dist/",
    "start": "cross-env NODE_ENV=production yarn babel-node src/server.js"
  },
  "repository": "git@github.com:codecontinent/express.git",
  "author": "CodeContinent <codecontinent@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codecontinent/express/issues"
  },
  "homepage": "https://github.com/codecontinent/express",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-hbs": "^2.4.0",
    "hbs": "^4.2.0",
    "http-terminator": "^3.2.0",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.5",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraff": "^0.0.1-security",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs}": "yarn eslint src",
    "**/*.{js,json,hbs,html,cjs,mjs}": "yarn prettier . -w"
  },
  "keywords": [
    "express",
    "nodejs",
    "rest-api"
  ]
}
